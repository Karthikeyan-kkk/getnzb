<EditText android:layout_height="wrap_content" android:layout_below="@+id/headerAddMySearch" android:layout_toRightOf="@+id/textSearchTerm" android:layout_width="fill_parent" android:id="@+id/editTextSearchTerm"></EditText>
<EditText android:layout_height="wrap_content" android:layout_toRightOf="@+id/textSearchTerm" android:layout_width="fill_parent" android:id="@+id/editTextExcludeTerm" android:layout_below="@+id/editTextSearchTerm"></EditText><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Group :" android:textStyle="bold" android:textColor="#D6CBF2" android:id="@+id/textGroup" android:layout_below="@+id/editTextExcludeTerm"></TextView><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#D6CBF2" android:textStyle="bold" android:text="Exclude : " android:paddingLeft="2dip" android:id="@+id/textExclude" android:layout_below="@+id/editTextSearchTerm"></TextView>






</RelativeLayout>
