<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#D6CBF2" android:id="@+id/name" android:text="@+id/name" android:paddingRight="8dip"></TextView>
<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#D6CBF2" android:text="@+id/age" android:id="@+id/age" android:textStyle="italic" android:layout_below="@+id/name"></TextView>
<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/size" android:textColor="#D6CBF2" android:text="@+id/size" android:textStyle="italic" android:layout_below="@+id/name" android:layout_centerHorizontal="true"></TextView>
<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#D6CBF2" android:id="@+id/category" android:text="@+id/category" android:textStyle="italic" android:layout_below="@+id/name" android:layout_alignParentRight="true" android:paddingRight="8dip"></TextView>
</RelativeLayout>
