<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/RelativeLayout01" 
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent" 
				xmlns:android="http://schemas.android.com/apk/res/android">
	
	<TextView 
		android:layout_width="wrap_content" 
		android:textColor="#D6CBF2"
		android:layout_toRightOf="@+id/checkbox" 
		android:layout_height="wrap_content" 	
		android:id="@+id/filename" 
		android:text="@+id/filename" android:maxLines="1" android:paddingRight="8dip">
	</TextView>
	<TextView android:layout_below="@+id/filename" 
		android:textColor="#D6CBF2"
		android:layout_width="wrap_content" 
		android:layout_toRightOf="@+id/checkbox" 
		android:layout_height="wrap_content" 
		android:id="@+id/age" android:text="@+id/age" android:textStyle="italic">
	</TextView>
	<TextView android:layout_below="@+id/filename"
		android:textColor="#D6CBF2" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:id="@+id/size" 
		android:text="@+id/size" 
		android:layout_marginRight="6dip" android:textStyle="italic" android:layout_centerHorizontal="true">
	</TextView>







<TextView android:layout_below="@+id/filename" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#D6CBF2" android:text="@+id/category" android:textStyle="italic" android:id="@+id/category" android:layout_alignParentRight="true" android:paddingRight="8dip"></TextView>
</RelativeLayout>
